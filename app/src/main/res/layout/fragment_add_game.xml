<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddGameFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvAdicionarJogo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:text="Adicionar Jogo"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvJogo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Jogo"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/tvAdicionarJogo"
        android:layout_marginStart="50dp"

        />
    <Spinner
        android:id="@+id/spJogo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@+id/tvJogo"
        />

    <EditText
        android:id="@+id/etNickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:hint="Username do jogo"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/spJogo"
        android:layout_marginStart="50dp"
        android:drawableStart="@drawable/ic_profile_black"
        />

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Rank"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/etNickname"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        />

    <Spinner
        android:id="@+id/spRank"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@id/tvRank"
        />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Tipo de jogo"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/spRank"
        android:layout_marginStart="50dp"
        />
    <Spinner
        android:id="@+id/spTipo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@id/tvTipo"
        />

    <Button
        android:id="@+id/btAdicionarJogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spTipo"
        android:text="Adicionar Jogo"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
</ScrollView>