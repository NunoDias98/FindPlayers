<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddGameFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvFiltrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:fontFamily="sans-serif"
        android:text="Filtrar"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvJogo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Jogo"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/tvFiltrar"
        android:layout_marginStart="50dp"

        />
    <Spinner
        android:id="@+id/spJogo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@+id/tvJogo"
        />


    <TextView
        android:id="@+id/tvRank"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Rank"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/spJogo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        />

    <Spinner
        android:id="@+id/spRank"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@id/tvRank"
        />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Tipo de jogo"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/spRank"
        android:layout_marginStart="50dp"
        />
    <Spinner
        android:id="@+id/spTipo"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@id/tvTipo"
        />

    <TextView
        android:id="@+id/tvLingua"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:text="Lingua"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:layout_below="@+id/spTipo"
        android:layout_marginStart="50dp"
        />
    <Spinner
        android:id="@+id/spLingua"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="20dp"
        android:layout_below="@id/tvLingua"
        />

    <Button
        android:id="@+id/btFiltrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spLingua"
        android:text="Filtrar"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
</ScrollView>