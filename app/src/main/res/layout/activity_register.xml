<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif"
        android:text="Registar"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNickname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Nickname"
        android:layout_below="@id/tvRegister"
        android:inputType="text"
        android:maxLines="1"
        android:drawableStart="@drawable/ic_profile_black"
        android:drawablePadding="3dp"
        />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNickname"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="3dp"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etEmail"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="3dp"
        />

    <TextView
        android:id="@+id/tvLinguasFaladas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:text="Linguas Faladas"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="15sp"
        />

    <CheckBox
        android:id="@+id/cbPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Português"
        android:layout_below="@+id/tvLinguasFaladas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <CheckBox
        android:id="@+id/cbEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inglês"
        android:layout_below="@+id/cbPT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        />
    <Button
        android:id="@+id/btRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cbEN"
        android:text="Registar"
        android:layout_marginTop="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />
</RelativeLayout>